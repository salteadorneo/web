---
import Layout from "../layouts/Layout.astro";

const response = await fetch(new URL('/data/status-history.json', Astro.url));
const history = await response.json();

const last24h = history.slice(-24);
const last7d = history.slice(-168);
const last30d = history;

const calculateUptime = (data: any[]) => {
  if (data.length === 0) return 0;
  const online = data.filter((r: any) => r.status === 'online').length;
  return ((online / data.length) * 100).toFixed(2);
};

const calculateAvgResponse = (data: any[]) => {
  const withResponse = data.filter((r: any) => r.responseTime !== null);
  if (withResponse.length === 0) return 0;
  const sum = withResponse.reduce((acc: number, r: any) => acc + r.responseTime, 0);
  return Math.round(sum / withResponse.length);
};

const uptime24h = calculateUptime(last24h);
const uptime7d = calculateUptime(last7d);
const uptime30d = calculateUptime(last30d);
const avgResponse = calculateAvgResponse(last24h);

const chartData = last7d.map((record: any) => ({
  timestamp: new Date(record.timestamp).getTime(),
  status: record.status === 'online' ? 1 : 0,
  responseTime: record.responseTime
}));
---

<Layout title="Estado del Servidor - mc.salteadorneo.dev">
  <main class="px-6 py-24 max-w-6xl mx-auto">
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-2">Estado del Servidor</h1>
      <p class="text-xl opacity-70">mc.salteadorneo.dev</p>
    </div>

    <div class="mb-8 p-6 rounded-lg bg-white/5 border border-white/10">
      <div class="flex items-center gap-4">
        <div id="current-status" class="flex items-center gap-2">
          <div class="w-4 h-4 rounded-full bg-gray-500"></div>
          <span class="text-xl">Verificando...</span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="p-6 rounded-lg bg-white/5 border border-white/10">
        <div class="text-sm opacity-70 mb-1">Últimas 24h</div>
        <div class="text-3xl font-bold">{uptime24h}%</div>
      </div>
      <div class="p-6 rounded-lg bg-white/5 border border-white/10">
        <div class="text-sm opacity-70 mb-1">Últimos 7 días</div>
        <div class="text-3xl font-bold">{uptime7d}%</div>
      </div>
      <div class="p-6 rounded-lg bg-white/5 border border-white/10">
        <div class="text-sm opacity-70 mb-1">Últimos 30 días</div>
        <div class="text-3xl font-bold">{uptime30d}%</div>
      </div>
      <div class="p-6 rounded-lg bg-white/5 border border-white/10">
        <div class="text-sm opacity-70 mb-1">Respuesta promedio</div>
        <div class="text-3xl font-bold">{avgResponse}ms</div>
      </div>
    </div>

    <div class="mb-8 p-6 rounded-lg bg-white/5 border border-white/10">
      <h2 class="text-2xl font-bold mb-4">Últimos 7 días</h2>
      <div class="h-24 flex items-end gap-0.5">
        {chartData.map((point: any) => (
          <div
            class="flex-1 rounded-t transition-colors"
            style={{
              height: point.status === 1 ? '100%' : '20%',
              backgroundColor: point.status === 1 ? '#22c55e' : '#ef4444'
            }}
            title={new Date(point.timestamp).toLocaleString('es-ES')}
          />
        ))}
      </div>
      <div class="flex justify-between mt-2 text-xs opacity-50">
        <span>Hace 7 días</span>
        <span>Ahora</span>
      </div>
    </div>

    <div class="p-6 rounded-lg bg-white/5 border border-white/10">
      <h2 class="text-2xl font-bold mb-4">Historial reciente</h2>
      <div class="space-y-2 max-h-96 overflow-y-auto">
        {history.slice(-50).reverse().map((record: any) => (
          <div class="flex items-center justify-between py-2 border-b border-white/5">
            <div class="flex items-center gap-3">
              <div class={`w-2 h-2 rounded-full ${record.status === 'online' ? 'bg-green-500' : 'bg-red-500'}`} />
              <span class="text-sm">
                {new Date(record.timestamp).toLocaleString('es-ES', {
                  day: '2-digit',
                  month: '2-digit',
                  year: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                })}
              </span>
            </div>
            <div class="flex items-center gap-4">
              <span class={`text-sm font-medium ${record.status === 'online' ? 'text-green-500' : 'text-red-500'}`}>
                {record.status === 'online' ? 'Online' : 'Offline'}
              </span>
              {record.responseTime && (
                <span class="text-sm opacity-70">{record.responseTime}ms</span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>

  <script>
    async function checkCurrentStatus() {
      try {
        const response = await fetch('/data/status-history.json');
        const history = await response.json();
        
        const statusDiv = document.getElementById('current-status');
        if (!statusDiv || history.length === 0) return;
        
        const latest = history[history.length - 1];
        const lastUpdate = new Date(latest.timestamp);
        const minutesAgo = Math.floor((Date.now() - lastUpdate.getTime()) / 60000);
        
        if (latest.status === 'online') {
          statusDiv.innerHTML = `
            <div>
              <div class="flex items-center gap-2 mb-1">
                <div class="w-4 h-4 rounded-full bg-green-500 shadow-lg shadow-green-500/50"></div>
                <span class="text-xl font-semibold text-green-500">Operacional</span>
              </div>
              <span class="text-xs opacity-50">Actualizado hace ${minutesAgo} minuto${minutesAgo !== 1 ? 's' : ''}</span>
            </div>
          `;
        } else {
          statusDiv.innerHTML = `
            <div>
              <div class="flex items-center gap-2 mb-1">
                <div class="w-4 h-4 rounded-full bg-red-500 shadow-lg shadow-red-500/50"></div>
                <span class="text-xl font-semibold text-red-500">Fuera de servicio</span>
              </div>
              <span class="text-xs opacity-50">Actualizado hace ${minutesAgo} minuto${minutesAgo !== 1 ? 's' : ''}</span>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error checking status:', error);
      }
    }
    
    checkCurrentStatus();
    setInterval(checkCurrentStatus, 300000);
  </script>
</Layout>
