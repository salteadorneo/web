---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Projects from "@/components/Projects.astro";
import Footer from "@/components/Footer.astro";
import ContactForm from "@/components/ContactForm.astro";
---

<Layout>
  <Header />
  <main class="max-w-3xl mx-auto px-4">
    <section class="relative text-center px-6 grid place-content-center mt-24">
      <div class="space-y-2">
        <img
          src="/cristian.png"
          alt="Cristian Adán"
          class="inline-block w-48 rounded-full aspect-square"
        />
        <h1 class="text-4xl sm:text-5xl font-bold text-white/90">
          Cristian Adán
        </h1>
        <h2 class="text-lg sm:text-2xl font-medium text-white/70">
          Desarrollador <strong class="text-primary">Full Stack</strong>
        </h2>
      </div>
    </section>
    <Projects />
    <ContactForm />
  </main>
  <Footer />
</Layout>
