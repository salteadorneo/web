---
import Layout from "@/layouts/Layout.astro";
import Github from "@components/icons/Github.astro";
import Linkedin from "@components/icons/Linkedin.astro";
import Twitter from "@components/icons/Twitter.astro";
import Email from "@components/icons/Email.astro";
---

<Layout>
  <main class="grid place-content-center h-screen">
    <span class="flex items-center gap-4">
      <img
        src="/cristian.png"
        alt="Cristian Adán"
        class="w-14 rounded-full object-cover"
      />
      <div>
        <h1 class="text-3xl">Cristian Adán</h1>
        <h2 class="uppercase">
          <span class="text-primary">Full Stack</span> Developer
        </h2>
      </div>
    </span>
    <section class="flex justify-center gap-6 mt-6">
      <a
        href="https://github.com/salteadorneo"
        target="_blank"
        rel="noopener noreferrer"
        title="Enlace a GitHub"
        class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
      >
        <Github />
      </a>
      <a
        href="https://www.linkedin.com/in/cristianadan/"
        target="_blank"
        rel="noopener noreferrer"
        title="Enlace a LinkedIn"
        class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
      >
        <Linkedin />
      </a>
      <a
        href="https://twitter.com/salteadorneodev"
        target="_blank"
        rel="noopener noreferrer"
        title="Enlace a Twitter"
        class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
      >
        <Twitter />
      </a>
      <a
        href="mailto:hola@salteadorneo.dev"
        target="_blank"
        rel="noopener noreferrer"
        title="Contactar por email"
        class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
      >
        <Email />
      </a>
    </section>
    <a
      href="/blog"
      class="flex items-center justify-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300 p-4"
      >Blog</a
    >
  </main>
</Layout>
