---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import Header from "@components/Header.astro";
import Tag from "@components/Tag.astro";

const posts = await getCollection("blog");
posts.sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime(),
);
---

<Layout
  title="Blog de salteadorneo - Programación y tecnología"
  description="Descubre las últimas novedades de JavaScript, HTML, CSS, base de datos y tecnología en general."
>
  <Header />
  <main class="max-w-3xl mx-auto p-4">
    <section class="space-y-12 pb-8">
      {
        posts.map((post) => (
          <article class="flex gap-8 group">
            <img
              src={post.data.image}
              alt={post.data.title}
              class="h-20 aspect-square grayscale group-hover:grayscale-0 transition-all duration-300 rounded"
              style={`view-transition-name: image-${post.slug}`}
            />
            <span class="space-y-2">
              <h3
                class="text-2xl leading-none font-bold text-white"
                style={`view-transition-name: title-${post.slug}`}
              >
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </h3>
              <p
                class="flex flex-wrap items-center gap-4"
                style={`view-transition-name: tags-${post.slug}`}
              >
                {post.data.tags.map((tag: string) => (
                  <Tag tag={tag} />
                ))}
              </p>
              <p style={`view-transition-name: desc-${post.slug}`}>
                {post.data.description}
              </p>
            </span>
          </article>
        ))
      }
    </section>
  </main>
  <Footer />
</Layout>
