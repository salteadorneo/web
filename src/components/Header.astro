---
import Github from "@components/icons/Github.astro";
import Linkedin from "@components/icons/Linkedin.astro";
import Twitter from "@components/icons/Twitter.astro";
import Email from "@components/icons/Email.astro";
---

<header
  class="max-w-4xl mx-auto py-4 px-6 flex flex-wrap items-center justify-between gap-6 mb-6"
>
  <div>
    <h1 class="text-xl">
      <a href="/blog" class="text-primary hover:text-white transition-all"
        >&lt;Blog <span class="italic">author</span>="salteadorneo" /&gt;</a
      >
    </h1>
    <h2 class="opacity-50">/* Cristian Ad√°n - Full stack developer */</h2>
  </div>
  <section class="flex gap-4">
    <a
      href="https://github.com/salteadorneo"
      target="_blank"
      rel="noopener noreferrer"
      title="Enlace a GitHub"
      class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
    >
      <Github size="20" />
    </a>
    <a
      href="https://www.linkedin.com/in/cristianadan/"
      target="_blank"
      rel="noopener noreferrer"
      title="Enlace a LinkedIn"
      class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
    >
      <Linkedin size="20" />
    </a>
    <a
      href="https://twitter.com/salteadorneodev"
      target="_blank"
      rel="noopener noreferrer"
      title="Enlace a Twitter"
      class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
    >
      <Twitter size="20" />
    </a>
    <a
      href="mailto:hola@salteadorneo.dev"
      target="_blank"
      rel="noopener noreferrer"
      title="Contactar por email"
      class="flex items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300"
    >
      <Email size="20" />
    </a>
  </section>
</header>
